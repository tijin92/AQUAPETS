    <div class="container-fluid pt-4 px-4">
      <div class="row g-4">
        <div class="col-12">
          <div class="bg-light rounded h-100 p-4">
            <h6 class="mb-4">Edit Category</h6>
            <form action="/admin/editCategory" method="post" enctype="application/x-www-form-urlencoded" id="edit-category">
            
              <div class="form-floating mb-3">
                <input type="hidden" class="form-control" name="OldCategoryName" value="<%= category.name %>" required/>
                <input type="hidden" class="form-control" id="floatingPassword" name="id" value="<%= category._id %>" required />
                <input type="text" class="form-control" id="floatingInput" name="name" value="<%= category.name %>" maxlength="40" required />
                <label for="floatingInput">Edit category name</label>
              </div>
              <div class="form-floating mb-3">
                <%= console.log('allOffers:', allOffers) %>
                <select class="form-select" id='offer' aria-label="Floating label select example" name="offer" >
                    <option selected>Select an offer (optional)</option>                           
                    <% if(allOffers.length > 0){ %>
                        <% allOffers.forEach((offer, index) => { %>
                          <option value="<%= offer._id %>" <% if (category.offer && category.offer.toString() === offer._id.toString()) { %>selected<% } %>><%= offer.name %></option>
                        <% }); %>
                    <% }else{ %>
                        <option value="">No offers available</option>
                    <% } %>

                </select>
                <label for="offer">Select Offer</label>
              </div>
              <div>
                <button type="submit" class="btn btn-primary">
                    Update Category
                  </button>
                  <a href="/admin/categoryList" class="btn btn-secondary" style="float: right;" role="button">Back</a>
              </div>
              
              <span style="display: inline-block" id="message-container">
                <% if(typeof message2 !== 'undefined'){ %>
                <div class="alert alert-success">
                  <h6 class="text-start" style="color: rgb(7, 201, 52)">
                    <%= message2 %>
                  </h6>
                </div>
                <% } %> <% if(typeof message1 !== 'undefined'){ %>
                <div class="alert alert-danger">
                  <h6 class="text-start" style="color: rgb(255, 0, 0)">
                    <%= message1 %>
                  </h6>
                </div>
                <% } %> <% if (typeof errors !== 'undefined') { %>
                <div class="alert alert-danger">
                  <ul>
                    <% for (let error of errors) { %>
                    <li><%= error %></li>
                    <% } %>
                  </ul>
                </div>
                <% } %>
              </span>

            </form>
          </div>
        </div>
      </div>
