                            <h6 class="mb-4">Add Banner</h6>
                            <form action="/admin/addBanner" method="post" enctype="multipart/form-data" id="addbanner">
                                <div>
                                    <% 
                                        if(typeof message2 !== 'undefined'){
                                            %>
                                            <div class="alert alert-success">
