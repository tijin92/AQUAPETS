                                    <select class="form-select" id="textAlignmentSelect" name="textAlignment">
                                        <option value="col-md-12 col-lg-7 offset-lg-1 offset-xl-0">Left</option>
                                        <option value="col-lg-10 offset-lg-1 text-center">Center</option>
                                        <option value="col-lg-10 offset-lg-1 text-right">Right</option>
                                    </select>
                                    <label for="form-control">Banner Text Allignment</label>
                                </div>
                                

