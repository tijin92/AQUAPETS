            <div class="container-fluid pt-4 px-4">
                <div class="row g-4">
                    <div class="col-12">
                        <div class="bg-light rounded h-100 p-4">
                            <h6 class="mb-4">Edit Product</h6>
                            <form action="/admin/editProduct" method="post" enctype="multipart/form-data" id="editProduct" >
                                <div>
                                    <% 
                                        if(typeof message2 !== 'undefined'){
                                            %>
                                            <div class="alert alert-success">
                                                <h6 class="text-start" style="color: rgb(7, 201, 52);"><%= message2 %></h6>
                                            </div>
                                            <%
                                        }
                                    %>
                                    <% 
                                        if(typeof message1 !== 'undefined'){
                                            %>
                                            <div class="alert alert-danger">
                                            <h6 class="text-start" style="color: rgb(255, 0, 0);"><%= message1 %></h6>
                                            </div>
                                            <%
                                        }
                                    %>
                                    <% if (typeof errors !== 'undefined') { %>
                                    <div class="alert alert-danger">
                                        <ul>
                                        <% for (let error of errors) { %>
                                            <li><%= error %></li>
                                        <% } %>
                                        </ul>
                                    </div>
                                    <% } %>
                                </div>
                                <div class="form-floating mb-3">
                                    <input type="hidden" class="form-control" id="floatingPassword"
                                    name="id" value="<%= product._id %>" required>
                                    <input type="text" class="form-control" id="name" name="name" value="<%= product.name %>" maxlength="40" required>
                                    <label for="name">Product Name</label>
                                </div>
                                
                                <div class="form-floating mb-3">
                                    <select class="form-select" id="category"
                                        aria-label="Floating label select example" name="category" required>
                                        <option class="text-primary" selected><%= product.category.name %></option>
                                        <% if(allCategory.length > 0){ %>
                                            <% allCategory.forEach((category, index) => { %>
                                                <option value="<%= category.name %>"><%= category.name %></option>
                                                <% }); %>
                                            <% }else{ %>
                                                <option value="">No category available</option>
                                                <% } %>
                                    </select>
                                    <label for="category">Product Category</label>
                                </div>
                                <div class="form-floating mb-3">
                                    
                                    <input type="number" class="form-control" id="price"
                                    name="price" value="<%= product.price %>" required>
                                    <label for="price">Price</label>
                                </div>

                                <div class="form-floating mb-3">
                                    <select class="form-select" id="offer" aria-label="Floating label select example" name="offer">
                                        <option class="text-primary" value="" <%= !product.offer ? 'selected' : '' %>>Select an offer (optional)</option>
                                        <% if(allOffers.length > 0){ %>
                                            <% allOffers.forEach((offer, index) => { %>
                                                <option value="<%= offer._id %>" data-percentage="<%= offer.percentage %>" <%= (product.offer && product.offer._id.toString() === offer._id.toString()) ? 'selected' : '' %>><%= offer.name %></option>
                                            <% }); %>
                                        <% } else { %>
                                            <option value="">No offer available</option>
                                        <% } %>
                                    </select>
                                    <label for="category">Offer</label>
                                </div>

                                <input type="hidden" id="offerPercentage" name="offerPercentage" value="<%= product.offer ? product.offer.percentage : '' %>">
                        
                                <div class="form-floating mb-3">
                                    <input type="number" class="form-control" id="offerPrice"
                                    name="offerPrice" value="<%= product.offerPrice %>" readonly>
                                    <label for="offerPrice">Offer Price</label>
                                </div>
                                <div class="form-floating mb-3">
                                    <input type="number" class="form-control" id="stock"
                                    name="stock" value="<%= product.stock %>" required>
                                    <label for="stock">Stock</label>
                                </div>
                                <div class="form-floating mb-3">
                                    <textarea class="form-control" placeholder="Leave a comment here"
                                        id="description" style="height: 150px;" name="description" required><%= product.description %></textarea>
                                    <label for="description">Product description</label>
                                </div>
                                <div class="mb-3">
                                    <label for="formFileMultiple" class="form-label">You can delete images of your product</label>

                                    <div id="imageContainer">
                                        <% if (product.image && product.image.length > 0) { %>
                                            <% product.image.forEach((image, index) => { %>
                                                <div class="col-2">
                                                    <% const imagePath = image.replace('D:\\week_12\\AQUApets\\public', baseURL) %>
                                                    <img class="product-image" src="<%= encodeURI(imagePath) %>" alt="<%= product.name %> Image <%= index + 1 %>" style="width: 50px; height: 50px;">
                                                    <a href="/admin/deleteImage?id=<%= product._id %>&image=<%= encodeURIComponent(image) %>" onclick="deleteImage('<%= product._id %>', '<%= encodeURIComponent(image) %>')"><button class="deleteImageButton" data-index="<%= index %>" >❌</button></a>
                                                    
                                                </div>
                                            <% }); %>
                                        <% } else { %>
                                            <img src="/default-image.jpg" alt="Default Image">
                                        <% } %>
                                    </div>
                                    <label for="formFileMultiple" class="form-label">You can upload new images of your product</label>
                                    <input class="form-control" type="file" name="image" id="formFileMultiple" multiple>
                                </div>
                                <div>
                                    <button type="submit" class="btn btn-primary">Update Product</button>
                                    <a href="/admin/productList" class="btn btn-secondary" style="float: right;" role="button">Back</a>
                                </div>
                                
                            </form>
