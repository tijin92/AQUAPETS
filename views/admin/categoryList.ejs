    <div class="container-fluid pt-4 px-4">
      <div class="row g-4">
        <div class="col-12">
          <div class="bg-light rounded h-100 p-4">
            <h6 class="mb-4">Add Category</h6>
            <form action="/admin/categoryList" method="post" enctype="application/x-www-form-urlencoded">
              
              <div class="form-floating mb-3">
                <input type="text" class="form-control" id="floatingInput" name="name" maxlength="40" required/>
                <label for="floatingInput">Create new category</label>
              </div>

              <div class="form-floating mb-3">
                <%= console.log('allOffers:', allOffers) %>
                <select class="form-select" id='offer' aria-label="Floating label select example" name="offer" >
                    <option selected>Select an offer (optional)</option>                           
                    <% if(allOffers.length > 0){ %>
                        <% allOffers.forEach((offer, index) => { %>
                            <option value="<%= offer._id %>" data-percentage="<%= offer.percentage %>"><%= offer.name %></option>
                        <% }); %>
                    <% }else{ %>
                        <option value="">No offers available</option>
                    <% } %>

                </select>
                <label for="offer">Select Offer</label>
              </div>

              <button type="submit" style="display: inline-block;" class="btn btn-primary">Add</button>
              <span style="display: inline-block;" id="message-container">
                <% if(typeof message2 !== 'undefined'){ %>
                <div class="alert alert-success">
                  <h6 class="text-start" style="color: rgb(7, 201, 52)">
                    <%= message2 %>
                  </h6>
                </div>
                <% } %> <% if(typeof message1 !== 'undefined'){ %>
                <div class="alert alert-danger">
                  <h6 class="text-start" style="color: rgb(255, 0, 0)">
                    <%= message1 %>
                  </h6>
                </div>
                <% } %> <% if (typeof errors !== 'undefined') { %>
                <div class="alert alert-danger">
                  <ul>
                    <% for (let error of errors) { %>
                    <li><%= error %></li>
                    <% } %>
                  </ul>
                </div>
                <% } %>
            </span>
            </form>
          </div>
        </div>
      </div>
    </div>
    <!-- form End -->
    <div class="container-fluid pt-4 px-4">
      <div class="row g-4">
        <div class="col-sm-12 col-xl-8">
          <div class="bg-light rounded h-100 p-4">
            <h6 class="mb-4">Category List</h6>
            <table class="table table-hover">
              <thead>
                <tr>
                  <th scope="col">#</th>
                  <th scope="col">Category</th>
                  <th scope="col"> offer</th>
                  <th scope="col">Status</th>
                  <th scope="col">Action</th>
                </tr>
              </thead>
              <tbody>
                <% if (categoryData.length > 0) {
                categoryData.reverse();
                categoryData.forEach(function(category, index) { %>
                <tr>
                  <th scope="row"><%= index+1 %></th>
                  <td style="width: 290px;"><%= category.name %></td>
                  <% const associatedOffer = allOffers.find(offer => offer._id.equals(category.offer)); %>
                  <td style="width: 100px;"><%= associatedOffer ? associatedOffer.percentage + '%' : 'N/A' %></td>
                  <td>
                    <span class="<%= category.is_blocked === 0 ? 'active' : 'blocked' %>">
                      <% if (category.is_blocked === 0) { %>Active<% } else {
                      %>Blocked<% } %>
                    </span>
                  </td>
                  <td style="width: 350px;">
                    <a href="/admin/blockCategory?id=<%= category._id %>" class="btn btn-primary btn-sm m-1" id="block-btn" style="width: 70px" onclick="confirmBlock(event, '<%= category.is_blocked %>', '<%= category._id %>')">
                      <% if (category.is_blocked === 0) { %>Block<% } else {
                      %>Unblock<% } %>
                    </a>

                    <a href="/admin/editCategory?id=<%= category._id %>" class="btn btn-primary btn-sm m-1" style="width: 50px">Edit</a>
                    <a id="deleteCategory" href="/admin/deleteCategory?id=<%= category._id %>" class="btn btn-danger btn-sm m-1" onclick="confirmCategoryDelete(event)" style="width: 60px">Delete</a>
                  </td>
                </tr>
                <% }); %> 
                <% } else { %>
                <tr>
                  <td colspan="3">No category found</td>
                </tr>
                <% } %>
              </tbody>
            </table>
          </div>
        </div>
