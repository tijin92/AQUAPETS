<!-- order details -->

<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <div class="bg-light rounded p-4">
        <h5 class="mb-4 ">Order Details</h5>
        <div class="table-responsive">
          <!-- Iterate through each order -->
          <% orders.forEach(order => { %>
            <div class="order-column mb-4">
              <h6 class="text-center">Order ID: <%= order.orderID %></h6>    
              <table class="table table-bordered sub-table">
                <thead>
                  <tr>
                    <th>Product Name</th>
                    <th>Quantity</th>
                    <th>Price Per Item</th>
                    <!-- Add more details as needed -->
                  </tr>
                </thead>
                <tbody>
                  <!-- Iterate through each order item -->
                  <% order.orderItems.forEach(item => { %>
                    <tr>
                      <td><%= item.product.name %></td>
                      <td><%= item.quantity %></td>
                      <td><%= item.pricePerItem %></td>
                      <!-- Add more details as needed -->
                    </tr>
                  <% }); %>
                </tbody>
              </table>
              <p class="text-center">Total Amount: Rs.<%= order.totalAmount %>/-</p>
              <br>
              <h5 class="mb-4 ">Reason for cancellation</h5>
              <div class="text-start">
              
                <form id="checkoutForm" method="post" action="/user/cancelOrder" style="display: inline-block;">
                  <input type="hidden" name="orderId" value="<%= order._id %>">

                  <!-- Add radio buttons for cancellation reasons -->
                  <div class="form-check">
                    <label for="reason1">
                      <input type="radio" id="reason1" name="cancellationReason" value="I have changed my mind" required> I have changed my mind
                    </label>
                  </div>
                  <div class="form-check">
                    <label for="reason2">
                      <input type="radio" id="reason2" name="cancellationReason" value="I want to change address for the order" required> I want to change address for the order
                    </label>
                  </div>
                  <div class="form-check">
                    <label for="reason3">
                      <input type="radio" id="reason3" name="cancellationReason" value="I want to convert my order to prepaid" required> I want to convert my order to prepaid
                    </label>
                  </div>
                  <div class="form-check">
                    <label for="reason4">
                      <input type="radio" id="reason4" name="cancellationReason" value="Price for the product has decresed" required> Price for the product has decresed
                    </label>
                  </div>
                  <div class="form-check">
                    <label for="reason5">
                      <input type="radio" id="reason5" name="cancellationReason" value="I want to cancel due to product quality issues" required> I want to cancel due to product quality issues
                    </label>
                  </div>
                  <div class="form-check">
                    <label for="reason6">
                      <input type="radio" id="reason6" name="cancellationReason" value="I want to change my phone number" required> I want to change my phone number
                    </label>
                  </div>
                  <div class="form-check">
                    <label for="reason7">
                      <input type="radio" id="reason7" name="cancellationReason" value="I have purchased the product elsewhere" required> I have purchased the product elsewhere
                    </label>
                  </div>
                  <div class="form-check">
                    <label for="reason8">
                      <input type="radio" id="reason8" name="cancellationReason" value="Product Damaged or Product no more Usable" required> Product Damaged or Product no more Usable
                    </label>
                  </div>
                  <div class="form-check">
                    <label for="reason9">
                      <input type="radio" id="reason9" name="cancellationReason" value="Product Died (purchased product is fish)" required> Product Died (purchased product is fish)
                    </label>
                  </div>
                  <div class="form-check">
                    <label for="reason10">
                      <input type="radio" id="reason10" name="cancellationReason" value="Others" required> Others
                    </label>
                  </div>
                  <div>
                    <label for="additionalComments">Additional Comments:</label>
                    <textarea id="additionalComments" name="additionalComments" rows="4" cols="50"></textarea>
                  </div>
                  <!-- Add more reasons as needed --> 

                  <% if (order.status !== 'Cancelled') { %>
                    <button class="btn btn-danger btn-sm" type="submit">Cancel Order</button>
                  <% } else { %>
                    <button class="btn btn-danger btn-sm cancelled" type="submit" disabled>Order Cancelled</button>
                  <% } %>
                </form>

              </div>
            </div>
          <% }); %> 
          <% if (!orders || orders.length === 0) { %>
            <p class="text-center">No orders found.</p>
          <% } %>                              
        </div>
      </div>
    </div>
  </div>
</div>



