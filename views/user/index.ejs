<!-- products -->
<div class="product-section mt-100 " id="product">
  <div class="container">
    <div class="row">
      <div class="col-lg-8 offset-lg-2 text-center">
        <div class="section-title">
          <h3><span class="orange-text">Our</span> Products</h3>
        </div>
      </div>
    </div>

    <div class="row">
      <form action="" class="col-10 col-md-6  text-center d-flex mx-auto pb-5">
        
          <input type="text" value="<%= search %>" placeholder="Search product" name="search">
          <%= console.log(category) %>
          <div class="row mx-auto">
            <select name="category" style="height: 30px;">
              <option value="" <%= !category ? 'selected' : '' %>>Select a category</option>
              <% allCategory.forEach(categoryItem => { %>
              <option value="<%= categoryItem.name %>" <%= category === categoryItem.name ? 'selected' : '' %>><%= categoryItem.name %></option>
              <% }); %>
            </select>
            <select name="sort" style="height: 30px;">
              <option value="lowToHigh" <%= sort === 'lowToHigh' ? 'selected' : '' %>>Price: Low to High</option>
              <option value="highToLow" <%= sort === 'highToLow' ? 'selected' : '' %>>Price: High to Low</option>
            </select>
          </div>
          
          <input class="d-flex mx-auto py-2 justify-content-center width: 50%; height: 20px; display: flex; align-items: center; justify-content: center; mt-2" type="submit" value="Search">
        
      </form>
    </div>
    

    <div class="row product-lists">
      <% if(allProduct.length > 0){ %> <% allProduct.forEach((product, index) =>
      { %>
      <div class="col-6 col-lg-3 col-md-4 text-center <%= encodeURIComponent(product.category) %>">
        <div class="single-product-item">
          <div class="product-image">
            <% if (product.image && product.image.length > 0) { %> <% const
            imagePath =
            product.image[0].replace('D:\\week_12\\AQUApets\\public', baseURL)
            %>
            <a href="/user/productDetail/<%= product._id %>">
              <img
                class="product-image mt-3"
                src="<%= encodeURI(imagePath) %>"
                alt="<%= product.name %>"
              />
            </a>
            <% } else { %> <% } %>
          </div>
          <h5 class="px-3"><%= product.name %></h5>
          <!--
          <% if(product.offer && product.offer.status && new Date(product.offer.expiryDate) >= new Date()){ %>
            <p class="product-price-underline">Price: <%= product.price %></p>
            <p class="product-offerPrice">
              Offer Price: <%= product.offerPrice %>
            </p>
          <% } else { %>
            <p class="product-price">Price: <%= product.price %></p>
          <% } %>
        -->

          <% if (product.offer && product.offer.status && new Date(product.offer.expiryDate) >= new Date()){ %>
            <p class="product-price-underline">Price: ₹<%= product.price %></p>
            <p class="product-offerPrice">Offer Price: ₹<%= product.offerPrice %></p>
          <% } else if (product.category.offer && product.category.offer.status && new Date(product.category.offer.expiryDate) >= new Date()) { %>
            <% const offerPercentage = 100 - product.category.offer.percentage; %>
            <% const offerPrice = (product.price * offerPercentage) / 100; %>
            <p class="product-price-underline">Price: ₹<%= product.price %></p>
            <p class="product-offerPrice">Category Offer Price: ₹<%= offerPrice.toFixed(0) %></p>
          <% } else { %>
            <p class="product-price">Price: ₹<%= product.price %></p>
          <% } %>

          <form action="/user/addToCart" method="POST" class="cart-btn btn">
            <input type="hidden" name="product_id" value="<%= product._id %>">
            <button class="cart-btn btn" type="submit"><i class="fas fa-shopping-cart"></i> Add to Cart</button>
          </form>
          
          <form action="/user/addToWishList" method="POST" class="cart-btn btn">
            <input type="hidden" name="product_id" value="<%= product._id %>">
            <button class="cart-btn btn" type="submit"><i class="fas fa-shopping-cart"></i> Add to Wishlist</button>
          </form>
          
        </div>
      </div>
      <% }); %> 
      <% }else{ %>
        <div class="col-6 col-lg-3 col-md-4 text-center">
          <h6>No products to display</h6>
        </div>
      <% } %>
    </div>
    
    
				<div class="row mb-100">
					<div class="col-lg-12 text-center">
						<div class="pagination-wrap">
							<ul>

                <% if (currentPage > 1) { %>
                  <li><a href="/user?page=<%= currentPage - 1 %>&search=<%= search %>&category=<%= category %>&sort=<%= sort %>">Previous</a></li>
                <% } %>
            
                <% for (let j = 1; j <= totalPages; j++) { %>
                  <% if (j == currentPage) { %>
                    <li><a class="active" href="/user?page=<%= j %>&search=<%= search %>&category=<%= category %>&sort=<%= sort %>"><%= j %></a></li>
                  <% } else { %>
                    <li><a href="/user?page=<%= j %>&search=<%= search %>&category=<%= category %>&sort=<%= sort %>"><%= j %></a></li>
                  <% } %>
                <% } %>

                <% if (currentPage < totalPages) { %>
                  <li><a href="/user?page=<%= currentPage + 1 %>&search=<%= search %>&category=<%= category %>&sort=<%= sort %>">Next</a></li>
                <% } %>

							</ul>
						</div>
					</div>
				</div>
  </div>
</div>
