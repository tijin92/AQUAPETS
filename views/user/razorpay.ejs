<!-- views/razorpay.ejs -->

<!-- Razorpay modal script -->
<script src="https://checkout.razorpay.com/v1/checkout.js"></script>
<script>
    var options = {
        key: '<%= key_id %>',
        amount: '<%= amount %>',
        currency: 'INR',
        name: '<%= name %>',
        description: 'Payment for your order',
        order_id: '<%= order_id %>',
        prefill: {
            name: '<%= name %>',
            email: '<%= email %>',
            contact: '<%= mobile %>',
        },
        theme: {
            color: '#F37254',
        },
    };

    var rzp = new Razorpay(options);
    rzp.open();
</script>
