<!-- contact form -->
<div class="contact-from-section mt-100 mb-100">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 mb-5 mb-lg-0">
                <div class="form-title">
                    <h2>Edit Address</h2> 
                </div>
                <div>
                    <% 
                        if(typeof message2 !== 'undefined'){
                            %>
                            <h6 class="text-start" style="color: rgb(15, 185, 15);"><%= message2 %></h6>
                            <%
                        }
                    %>
                    <% 
                        if(typeof message1 !== 'undefined'){
                            %>
                            <h6 class="text-start" style="color: rgb(255, 0, 0);"><%= message1 %></h6>
                            <%
                        }
                    %>
                </div>

            <div id="form_status"></div>
                <div class="contact-form">
                        
                    <form class="mb-2 p-3" style="background-color: aliceblue;" action="/user/editAddress" method="post" type="POST" id="addressForm" enctype="application/x-www-form-urlencoded" onSubmit="return valid_datas( this );">
                        <input type="hidden" name="user_id" value="<%= user_id %>">
                       
                        <% if (Array.isArray(address.address) && address.address.length > 0) { %>
                        <% const firstAddress = address.address[0]; %>
                        <p>
                            <input type="hidden" name="address_id" value="<%= firstAddress._id %>">
                            <label style="width: 120px;" for="house_name">House_name</label> 
                            <input type="text" name="house_name" id="house_name" value="<%= firstAddress.house_name %>" required>     
                            
                        </p>
                        <p>                
                            <label style="width: 120px;" for="street">Street</label>  
                            <input type="text" name="street" id="street" value="<%= firstAddress.street %>" required>    
                            
                        </p>
                        <p>
                            <label style="width: 120px;" for="city">City</label>      
                            <input type="text" name="city" id="city" value="<%= firstAddress.city %>" required>
                        
                        </p>
                        <p>
                            <label style="width: 120px;" for="state">State</label>      
                            <input type="text" name="state" id="state" value="<%= firstAddress.state %>" required>
                           
                        </p>
                        <p>
                            <label style="width: 120px;" for="postalCode">PostalCode</label>      
                            <input type="text" name="postalCode" id="postalCode" value="<%= firstAddress.postalCode %>" required>

                        </p>
                        <p>
                            <label style="width: 120px;" for="country">Country</label>      
                            <input type="text" name="country" id="country" value="<%= firstAddress.country %>" required>
            
                        </p>
                        <% } else { %>
                            <p>No address found.</p>
                        <% } %>
                        <div class="row">
                            <div class="col-6">
                                <input type="submit" value="Update address">
                            </div>
                            <div class="col-6 text-right">
                                <button style="border: none;background: none;"><a class="mb-2 custom-button-2 p-3" href="/user/myAccount" class="text-white" >Back</a></button>
                            </div>
                            
                        </div>
                        

                    </form>

                </div>
            </div>
            <div class="col-lg-4">
                <div class="contact-form-wrap">
                    <div class="contact-form-box">
                        <h4><i class="fas fa-map"></i> Shop Address</h4>
                        <p>34/8, East Hukupara <br> Gifirtok, Sadan. <br> Country Name</p>
                    </div>
                    <div class="contact-form-box">
                        <h4><i class="far fa-clock"></i> Shop Hours</h4>
                        <p>MON - FRIDAY: 8 to 9 PM <br> SAT - SUN: 10 to 8 PM </p>
                    </div>
                    <div class="contact-form-box">
                        <h4><i class="fas fa-address-book"></i> Contact</h4>
                        <p>Phone: +00 111 222 3333 <br> Email: tijindayi@gmail.com.com</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
